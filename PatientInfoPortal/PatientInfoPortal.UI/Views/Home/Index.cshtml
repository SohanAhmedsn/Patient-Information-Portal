@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Patient Information Portal</h1>
    <p class="lead">Manage your patients efficiently with the features below:</p>
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">View Patients</h5>
                    <p class="card-text">Manage patient records.</p>
                    <a href="/Patients" class="btn btn-primary">Go to Patients</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Add New Patient</h5>
                    <p class="card-text">Enter a new patient into the system.</p>
                    <a href="/Patients/Create" class="btn btn-success">Add Patient</a>
                </div>
            </div>
        </div>
    </div>
</div>
